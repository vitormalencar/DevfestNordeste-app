  ion-tabs.tabs-striped.tabs-top.tabs-color-light
    ion-tab.tab-title(title="GOLD")
      ion-pane
        ion-content.padding
          div
            .card(ng-repeat="sponsor in vm.sponsors.gold") 
              {{sponsor}}
    ion-tab.tab-title(title="SILVER")
      ion-pane
        ion-content.padding
          div
            .card(ng-repeat="sponsor in vm.sponsors.silver")
    ion-tab.tab-title(title="BRONZE")
      ion-pane
        ion-content.padding
          div
            .card(ng-repeat="sponsor in vm.sponsors.bronze")
